# Example backend environment variables
# Copy to .env and fill with secure values (don't commit .env)

# Use MongoDB Atlas URI, e.g.:
# MONGODB_URI="mongodb+srv://<user>:<password>@cluster0.abcd.mongodb.net/?retryWrites=true&w=majority"
MONGODB_URI=""
MONGODB_DB="shadowme"

# JWT configuration
JWT_SECRET="replace-with-a-secure-secret"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="replace-with-refresh-secret"
JWT_REFRESH_EXPIRES_IN="7d"

# Server config
PORT=3000
FRONTEND_URL=http://localhost:5173
